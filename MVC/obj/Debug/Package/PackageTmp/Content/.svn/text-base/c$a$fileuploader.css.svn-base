.qq-uploader { position:relative; width: 100%; overflow:hidden;}
.qq-uploader-div { width: auto; overflow:hidden;}

.qq-upload-drop-area {
    position:absolute; top:0; left:0; width:100%; height:100%; z-index:2;
    background:#185274; text-align:center; 
}
.qq-upload-drop-area span {
    display:block;
    position:absolute;
    top: 50%;
    width:100%;
    margin-top:-8px;
    font-size:16px;
    font-weight:bold;
    color:#fff;
}
.qq-upload-drop-area-active {background:#247BAE;}

.qq-upload-list {margin:10px 15px; padding:0; list-style:none;}
.qq-upload-list li 
{
    margin:0; 
    padding:0; 
    line-height:15px; 
    font-size:12px; 
    position: relative; 
    width: 300px; 
    height: 100px;
    display:inline-block;
}
.qq-upload-list li img  { position: absolute; top: 5px; left: 5px;}
.qq-upload-list li div  { position: absolute; top: 10px; left: 100px;}

.qq-upload-file, .qq-upload-spinner, .qq-upload-size, .qq-upload-cancel, .qq-upload-failed-text {
    margin-right: 7px;
}

.qq-upload-file {}
.qq-upload-spinner {display:inline-block; background: url("/Imagens/c16.gif"); width:15px; height:15px; vertical-align:text-bottom;}
.qq-upload-size,.qq-upload-cancel {font-size:11px;}

.qq-upload-failed-text {display:none;}
.qq-upload-fail .qq-upload-failed-text {display:inline;}
.qq-upload-button button 
{
    overflow: hidden;
    }